<div class="solvers-container">
  <% @solvers.each do |solver| %>
    <div class="solver-details">
      <%= render partial: "shared/solver_avatars", locals: {solver: solver} %>
      <%= solver.first_name %>
      <%= solver.last_name %>
      <% solver.sub_categories.each do |sub_cat| %>
        <%= sub_cat.name %>
      <% end %>
      <%= simple_form_for [@project, @project_solver] do |f| %>
      <%= f.hidden_field :user_id, value: solver.id %>
      <%= f.button :submit, value: 'Add contractor' %>
      <% end %>
    </div>
  <% end %>
</div>
