<% if @map.photo.blank? %>
  <%= image_tag("https://upload.wikimedia.org/wikipedia/commons/9/9a/Sample_Floorplan.jpg") %>
<% else %>
  <%= cl_image_tag(@map.photo, height: 300, width: 400, crop: :fill) %>
<% end %>

<ol>
  <% @map.issues.each do |issue| %>
    <li>
      <p>Issue: <%= issue.title %></p>
      <ul>
      <% issue.categories.each do |category| %>
        <li>
          <p>Category: <%= category.name %></p>
          <ul>
            <% issue.sub_categories.each do |subcategory| %>
              <% if subcategory.category == category %>
                <li>
                  <p>Subcategory: <%= subcategory.name %></p>
                </li>
              <% end %>
            <% end %>
          </ul>
        </li>
      <% end %>
      </ul>
    </li>
  <% end %>
</ol>

<%= link_to 'Back to Project', project_issues_path(@map.project) %>
