<div class="main-section">
  <div class="rounded-card">
    <!-- display sub categories -->
    <p class="title-center"><%= @issue.title %></p>
  </div>
  <div class="rounded-card">
    <div class="img-container-in-card">
      <%= link_to cl_image_tag(@issue.map.photo, height: 300, width: 400, crop: :fill), map_path(@issue.map)%>
    </div>
    <div class="text-container-in-card">
      <p>
        <%= @issue.map.title %>
      </p>
    </div>
  </div>
  <% @issue.categories.each do |category| %>
    <% @issue.sub_categories.each do |subcategory| %>
      <div class="rounded-card issue-card">
        <% if subcategory.category == category %>
          <p class="title">Subcategory: <%= subcategory.name %></p>
          <p>Category: <%= category.name %></p>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
  <!-- display solvers pertaining to this issue -->
  <div class="solvers-container sborder-bottom m-3">
    <% @issue_solvers.each do |solver| %>
      <div class="solver-details">
        <%= render partial: "shared/solver_avatars", locals: {solver: solver.project_solver.user} %>
        <%= solver.project_solver.user.first_name %>
      </div>
    <% end %>
  </div>

<!-- Solver search bar -->
<div>
  <%= form_tag project_issue_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find A Solver"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>


  <!-- add and display solvers -->
  <div class="solvers-container">
    <% @solvers.each do |solver| %>
      <div class="solver-details">
        <%= render partial: "shared/solver_avatars", locals: {solver: solver.project_solver.user} %>
        <p>
        <%= solver.first_name %>
        <%= solver.last_name %>
        </p>
        <p>
          <% solver.sub_categories.each do |sub_cat| %>
            <%= sub_cat.name %>
          <% end %>
        </p>
        <%= simple_form_for [@issue, @issue_solver] do |f| %>
        <%= f.hidden_field :user_id, value: solver.id %>
        <%= f.button :submit, value: 'Add contractor' %>
        <% end %>
      </div>
    <% end %>
  </div>


