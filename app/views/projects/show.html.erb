<% if @project.photo.blank? %>
  <%= image_tag("https://source.unsplash.com/600x400/?sig=#{rand(1..100)}/&mansion,luxury") %>
<% else %>
  <%= cl_image_tag(@project.photo, height: 300, width: 400, crop: :fill) %>
<% end %>
<%= @project.name %>

<% @project.maps.each do |map| %>
  <% if map.photo.blank? %>
    <%= image_tag("https://upload.wikimedia.org/wikipedia/commons/9/9a/Sample_Floorplan.jpg") %>
  <% else %>
    <%= cl_image_tag(map.photo, height: 300, width: 400, crop: :fill) %>
  <% end %>
<% end %>

<% if @project.project_solvers.present? %>
  <% @project.project_solvers.each do |solver| %>
    <%= image_tag("https://source.unsplash.com/600x400/?sig=#{rand(1..100)}/&#{%w(man woman).sample},face") %>
    <%= solver.user.first_name %>
    <%= solver.user.last_name %>
    <% solver.user.sub_categories.each do |sub_cat| %>
      <%= sub_cat.name %>
    <% end %>
  <% end %>
<% end %>

<%= link_to 'Add contractors', solvers_project_path(@project) %>
