<div class="main-section full-screen-height">
  <% @issues.each do |issue| %>
    <%= link_to issue_messages_path(issue) do %>
      <div class="rounded-card issue-card">
        <p class="title">
          <%= issue.title %>
        </p>
        <p>
          <%= issue.map.title %>
        </p>
      </div>
    <% end %>
  <% end %>
</div>

<div class="btn-container">
  <%= link_to 'Report new issue', new_project_issue_path(@project), class: "emerald command-btn" %>
  <%= link_to 'Project details', project_path(@project), class: "emerald command-btn" %>
</div>
