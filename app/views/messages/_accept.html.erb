<%= simple_form_for [@issue.project, @issue] do |f| %>
<%= f.hidden_field :accepted, value: true %>
<%= f.button :submit, value: 'Approve', class: 'emerald action-btn' %>
<% end %>

<%= simple_form_for [@issue.project, @issue] do |f| %>
<%= f.hidden_field :resolved, value: false %>
<%= f.button :submit, value: 'Reject', class: 'emerald action-btn' %>
<% end %>
